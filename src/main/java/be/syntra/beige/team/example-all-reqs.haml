      #divId
        %p#pId
    %h2 Class identifier examples
      .myClass
        %p.myP paragraph text
        %p.myP.alert.center alert message
    %h2 Attributes examples
      %foo(attribute="value") text
      %(attribute="value") text
      %p.aclass(attribute="value") text
